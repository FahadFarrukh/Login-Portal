<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"

    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"

        >


        <TextView
            android:id="@+id/textview1"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:text="Signup"
          android:layout_marginLeft="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:fontWeight="600"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="90dp"
            android:layout_marginLeft="4dp"
            android:layout_height="45dp"
            android:text="Here"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview1"
            android:textColor="@color/maroon"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/fa"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:background="@drawable/back_email"
            android:drawableLeft="@drawable/backk"
            android:letterSpacing="0.05"
            android:textSize="17dp"
            android:hint="Last Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textColorHint="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/fa2"
            app:layout_constraintTop_toBottomOf="@+id/textview1"
            android:layout_marginLeft="5dp"
            android:inputType="textCapWords"
            android:textColor="@color/black"/>



        />
        <EditText
            android:id="@+id/fa2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:hint="First Name"
            android:background="@drawable/back_email"
            android:drawableLeft="@drawable/backk"
            android:letterSpacing="0.05"
            android:textSize="17dp"
            android:textColorHint="@color/grey"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fa"
            app:layout_constraintTop_toBottomOf="@+id/textview1"
            android:inputType="textCapWords"
            android:textColor="@color/black"

            />

        <EditText
            android:id="@+id/editTexte"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_email"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Enter your E-mail"
            android:letterSpacing="0.05"
            android:textSize="17dp"
            android:inputType="text"
            android:textColor="@color/black"

            android:textColorHint="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fa2"
            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextabc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTexte">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/back">

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lockkk"
                    android:drawablePadding="10dp"
                    android:textSize="17dp"
                    android:hint="Enter your Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingBottom="18dp"/>

                <ToggleButton
                    android:id="@+id/togglePassword"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/toggle_icon"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />


            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextabcd"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextabc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/back">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lockkk"
                    android:drawablePadding="10dp"
                    android:paddingBottom="18dp"
                    android:hint="Enter your Password"
                    android:textSize="17dp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <ToggleButton
                    android:id="@+id/togglePassword2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/toggle_icon"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />


            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:id="@+id/spinner_first"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/editTextabcd"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:hint="Select"
            android:background="@drawable/back2"
            />

        <Button
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:text="Signup"
            android:textSize="16sp"

            android:paddingVertical="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_first"
            android:backgroundTint="@color/maroon"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>